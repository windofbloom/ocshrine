---
/*STYLES*/
import '../styles/Contact.css'

/*COMPONETS*/
import Layout from "../layouts/Layout.astro"

/*IMAGES*/
import { Image } from 'astro:assets';
import ContactImg from '../assets/003.png'
---

<Layout>
